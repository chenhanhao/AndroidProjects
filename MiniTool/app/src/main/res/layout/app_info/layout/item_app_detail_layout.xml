<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginBottom="10dp"
    android:paddingRight="20dp"
    android:background="@drawable/item_selector">

    <ImageView
        android:id="@+id/iv_app_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/tv_app_name"
        android:layout_width="150dp"
        android:layout_height="20dp"
        android:textStyle="bold"
        android:ellipsize="end"
        android:layout_alignTop="@+id/iv_app_icon"
        android:layout_toRightOf="@+id/iv_app_icon" />

    <TextView
        android:id="@+id/tv_app_package_name"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:ellipsize="end"
        android:layout_below="@+id/tv_app_name"
        android:layout_toRightOf="@+id/iv_app_icon" />

    <TextView
        android:id="@+id/tv_app_version_code"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="12sp"
        android:layout_toRightOf="@+id/iv_app_icon"
        android:layout_alignBottom="@+id/iv_app_icon"/>

    <TextView
        android:id="@+id/tv_app_android_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/tv_app_api_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_below="@+id/tv_app_android_version"
        android:layout_marginTop="5dp"
        android:layout_alignParentRight="true"/>

</RelativeLayout>
