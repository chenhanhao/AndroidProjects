<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:clickable="true"
    android:foreground = "?attr/selectableItemBackground">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingLeft="20dp"
        android:paddingRight="10dp"
        android:paddingTop="20dp"
        android:paddingBottom="10dp"
        android:gravity="center">
        <com.github.pavlospt.CircleView
            android:id="@+id/circle_view"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            app:cv_titleSize="18sp"
            app:cv_titleColor="@color/white"
            app:cv_strokeColorValue="@color/lightBlue"
            app:cv_subtitleSize="10sp"
            app:cv_fillColor="@color/lightBlue"/>
        <TextView
            android:id="@+id/tv_file_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/circle_view"
            android:layout_marginRight="40dp"
            android:text="con.dkjfdk.fdgfdg.fdg.fd.gdf.ag.fds"
            android:textSize="18sp"
            android:textStyle="bold"
            android:ellipsize="end"
            android:singleLine="false"/>
        <TextView
            android:id="@+id/tv_file_path"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp"
            android:layout_toRightOf="@+id/circle_view"
            android:layout_below="@+id/tv_file_name"
            android:text="/gf/fd/hg/t/h/t5/5/g5/con.dkjfdk.fdgfdg.fdg.fd.gdf.ag.fds"
            android:ellipsize="end"
            android:singleLine="false"/>
        <CheckBox
            android:id="@+id/cb_selected"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_above="@id/bt_file_detail"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:layout_alignParentRight="true"
            android:clickable="false"/>

        <Button
            android:id="@+id/bt_file_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_file_path"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="文件详情"
            android:textSize="15sp"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>


